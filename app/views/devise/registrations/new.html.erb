<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <table align="right">
    <tr>
      <th>Create an account</th>
    </tr>
    <tr>  
      <th>It's free and always will be.</th>
    </tr>
    <tr>
      <td>
        <%= f.text_field :firstname, autofocus: true , placeholder: "First name"%>
      </td>
      <td>  
        <%= f.text_field :surname, autofocus: true , placeholder: "Surname"%>
      </td>
    </tr>
    <tr >
      <td>  
        <%= f.text_field :mobilenumber, autofocus: true , placeholder: "Mobile number"%>
      </td>
    </tr>
    <tr >
      <td>
        <%= f.email_field :email, autofocus: true , placeholder: "Email address"%>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.password_field :password, autocomplete: "off" ,placeholder: "Password 6 characters minimum"%>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Password confirmation" %>
      </td>
    </tr> 
    <tr>
      <td>
        <%= f.label :birthday%><br />
        <%= f.date_select :birthday, order: [:day,:month, :year], prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year - 18, end_year: Date.today.year - 100 %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.collection_radio_buttons :gender, [['Male'] ,['Female']], :first, :last %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :image%><br />
        <%= f.file_field :image%>
      </td>
    </tr>
    <tr>
      <td>  
        <%= f.submit "Create an account" %>
      </td>
    </tr>
<% end %>
  </table>

